<!doctype html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>DashBoard CEGEFOS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/calculImc.css" />
    
</head>

<body>
    <div class="container justify-content-center text-center">
        <h3>Calcul de devises</h3>
        <form class="example-form"  id="#convDeviseForm" method="POST">
                <h4>Montant en euros:</h4>
                <div class="example-full-width" appearance="fill">
                        <label>Montant</label>
                        <input name="montantEUR" id="montantEUR" type="number" placeholder="Ex. 15.2 €" step=".01" value="<%= montantEUR %>"/>€
                </div>
                <br>
                <h4>Montant en dollars US:</h4>
                <div class="example-full-width" appearance="fill">
                        <label>Montant</label>
                        <input name="montantUSD" id="montantUSD" type="number" placeholder="Ex. 15.2 $US" step=".01" value="<%= montantUSD %>"/>$US
                </div>
                <br>
                <h4>Montant en YUAN:</h4>
                <div class="example-full-width" appearance="fill">
                        <label>Montant</label>
                        <input name="montantCNY" id="montantCNY" type="number" placeholder="Ex. 15.2 ¥" step=".01" value="<%= montantCNY %>"/>¥
                </div>
                <br>
                <div>
                        <button color="primary" type="submit" >Ajouter</button>
                </div>
        </form>
        <br>

        <div class="justify-content-center text-center"> 
            <h3>Liste des derniers calculs</h3>
            <ul>
                <% listChange.forEach(function(changelu) { %>
                    <li><%= changelu.montantEUR %>€ - <%= changelu.montantUSD %>$US - <%= changelu.montantCNY %> ¥ - <%= changelu.created_date %></li>
                <% }); %>
            </ul>
        </div>

    </div>

</body>
<footer>
    <nav class="navbar navbar-expand-lg navbar-light bg-light footer" routerLinkActive="active">
        <div class="container-fluid">
            <div class="col-lg-1"><a href="/" >Accueil</a></div>
            <% if ( session.active === true ) { %>
                <div class="col-lg-1"><a href="/calculImc">Calcul IMC</a></div>
                <div class="col-lg-1"><a href="/convDevise">Convertisseur Devise</a></div>
                <div class="col-lg-1"><a href="/listPosts">Posts</a></div>
                <div class="col-lg-1"><a href="/newPost">Nouveau post</a></div>
                <div class="col-lg-1">
                    <form method="POST" action="/deconnexion">
                        <button type="submit" class ="mb-2" style="border: solid grey; background-color:red" name="deconnexion">Déconnexion</button>
                    </form>
                </div>
            <% } else { %>
                <div class="col-lg-1"><a href="/inscription">Inscription</a></div>
                <div class="col-lg-1"><a href="/connexion">Connexion</a></div>
            <% } %>
        </div>
    </nav>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script src="https://cdn.polyfill.io/v2/polyfill.min.js?features=Intl.~locale.en"></script>
    <script src="https://cdn.socket.io/4.4.1/socket.io.min.js" integrity="sha384-fKnu0iswBIqkjxrhQCTZ7qlLHOFEgNkRmK2vaO/LbTZSXdJfAu6ewRBdwHPhBo/H" crossorigin="anonymous"></script>
</footer>
</html>